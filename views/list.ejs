    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
    />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap"
      rel="stylesheet"
    />

    <!-- CSS -->
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark align-items-start">
      <div class="container">
        <a class="navbar-brand" href="/">Aplikasi Validasi</a>
        <a class="btn btn-light" href="/logout">
          <i class="bi bi-box-arrow-right"></i>
          <span class="d-none d-sm-inline">Logout</span>
        </a>
      </div>
    </nav>

    <!-- search bar -->
    <section class="search-bar">
      <div class="container">
        <div class="card mt-3 px-3 pt-3 rounded-5 shadow">
          <div class="row">
            <form class="d-flex mb-3" role="search" action="/list" method="GET">
              <div class="input-group">
                <input
                  class="form-control rounded-start-pill"
                  id="searchInput"
                  type="search"
                  name="sn"
                  placeholder="Search serial number"
                  aria-label="Search"
                />
                <button class="btn btn-1 btn-lg rounded-end-pill" type="submit">
                  <i class="bi bi-search"></i>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>

    <!-- search result -->
    <section class="search-results">
      <div class="container">
        <div class="card mt-3 p-3 rounded-5 shadow">
          <% if (devices.length > 0) { %> <% devices.forEach(device => { %>
          <a href="/detail/<%= device.sn %>" class="search-result-link">
            <div class="search-result">
              <div class="row">
                <div class="col-6">
                  <p><b><%= device.sn %></b></p>
                  <p><%= device.nama %></p>
                  <p><%= device.perangkat %></p>
                </div>
                <div class="col-6 d-flex justify-content-end">
                  <p>
                    <strong>Status:</strong> <%= device.status === 1 ? 'Valid' :
                    'Tidak Valid' %>
                  </p>
                </div>
              </div>
            </div>
          </a>
          <% }); %> <% } else { %>
          <p class="text-center">Perangkat tidak ditemukan</p>
          <% } %>
